{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="./css/login.css">
{% endblock %}
{% block navigatie %}
{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->

        <!-- Icon -->
        <div class="fadeIn first">
{#            <img src="http://danielzawadzki.com/codepen/01/icon.svg" id="icon" alt="User Icon" />#}
            <h1>Login here...</h1>
        </div>

        <!-- Check if error message -->
        {% if error %}
            <span class="error">{{ error.messageKey }}</span>
        {% endif %}

        <!-- Login Form -->
        <form action="{{ path('login') }}" method="post">
            <input type="text" id="username" value="{{ Lastusername }}" class="fadeIn second" name="_username" placeholder="username">
            <input type="password" id="password" class="fadeIn third" name="_password" placeholder="password">
            <input type="submit" class="fadeIn fourth" value="Log In">
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="#">Forgot Password?</a>
        </div>

    </div>
</div>
{% endblock %}
